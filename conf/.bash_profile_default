#!/bin/bash

# Set Qt5 applications to use the Gtk+ 2 style
export QT_QPA_PLATFORMTHEME=gtk2

export DOCKER_HOST="unix:///var/run/docker.sock"

export EDITOR='vim'

export PATH=/home/vagrant/.bin:$PATH

#kubectx and kubens
export PATH=/opt/kubectx:$PATH
export PATH=/home/vagrant/projects/bash-tools/bin:$PATH

export HOST_USERNAME="vagrant"

export LC_TIME=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export IBUS_ENABLE_SYNC_MODE=1

# fixed core dumped issue, but can be slower,
# use this only if DISPLAY is set to remote
export LIBGL_ALWAYS_INDIRECT=1
export DISPLAY="$(ip route show default | awk '/default/ {print $3}'):0.0"

# Paths
if [[ -d "${HOME}/projects/bash-tools/.bin" ]]; then
    export PATH="${HOME}/projects/bash-tools/bin:${PATH}"
fi

# useful for tmuxinator
export EDITOR='vim'

#################################################################
# If not running interactively, do some settings

if [[ ! -z "$PS1" ]]; then
    # This shell is interactive
    source "${HOME}/.bashrc"
fi

export NVM_DIR="/usr/local/nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

true